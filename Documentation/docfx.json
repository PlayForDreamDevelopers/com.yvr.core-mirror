{
  "metadata": [
    {
      "src": [
        {
          "files": ["./YVR.Core.Runtime.csproj"]
        }
      ],
      "dest": "api",
      "memberLayout": "separatePages",
      "properties": {
        "ProduceReferenceAssembly": true
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.{md,yml}"],
        "exclude": ["_site/**"]
      },
      {
        "src": "../com.yvr.core/",
        "files": [
          "Documentation/**.md",
          "Documentation/**/**/toc.yml",
          "Documentation_CN/**.md",
          "Documentation_CN/**/**/toc.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      },
      {
        "src": "../com.yvr.core/",
        "files": [
          "Documentation/**.png",
          "Documentation/**.jpg",
          "Documentation_CN/**.png",
          "Documentation_CN/**.jpg"
        ]
      }
    ],
    "output": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appName": "Core",
      "_appTitle": "Core",
      "_enableSearch": true,
      "pdf": false
    }
  }
}
